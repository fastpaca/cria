    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "ai": "^6.0.0",
    "husky": "^9.1.7",
    "ioredis": "^5.8.2",
    "openai": "^4.104.0",
    "pg": "^8.16.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "ultracite": "^6.5.0",
    "vitest": "^3.1.0"
